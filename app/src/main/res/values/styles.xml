<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6E6E6E</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#2196F3</item>
    </style>


    <!-- Dialog Boxes -->
    <style name="DialogBoxStyleTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Activity's -->
    <style name="ActivityTitelText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ActivityHighlightedText" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="ActivityTextBody" parent="TextAppearance.AppCompat">

        <item name="android:textSize">15dp</item>
    </style>

    <!-- Dialog Boxes -->
    <style name="DialogBoxTextBody" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8dp</item>
    </style>

    <!--Misc..-->
    <style name="link" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <!-- Table rows -->
    <style name="TableRowsTitel" parent="TextAppearance.AppCompat">
              <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TableRowsTextBody" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TableRowsButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginRight">8dp</item>
        <item name="color">#555555</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TableRowsRemark" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#888888</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>